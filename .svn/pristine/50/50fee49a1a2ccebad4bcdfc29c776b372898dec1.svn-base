<!DOCTYPE html>
<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:h="http://xmlns.jcp.org/jsf/html"
                xmlns:f="http://xmlns.jcp.org/jsf/core"
                xmlns:p="http://primefaces.org/ui"
                xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
                template="/WEB-INF/template/layout.xhtml">

    <ui:define name="corpo">
        <h:form id="frmBusca">         
            <p:toolbar id="tb" styleClass="nj-toolbar">
                <p:toolbarGroup align="left">
                    <p:outputLabel style="padding-top: 5px; font-weight: 500; font-size: 1.3em; font-weight: bold; display: table-cell; vertical-align: middle; ">
                        <i class="fa fa-fw fa-calendar" style="color: #2db994; font-size: 15px; margin-left: 10px; margin-right: 5px"></i>Buscar
                    </p:outputLabel>
                </p:toolbarGroup>
                <p:toolbarGroup align="right">
                    <p:commandButton type="button" value="Novo" icon="ui-icon-document" onclick="PF('itemDialog').show();" style="margin-right: 8px;"/>
                    <p:menuButton value="Relatório" style="margin-right: 15px;">
                        <p:menuitem value="Save" icon="ui-icon-disk"/>
                        <p:menuitem value="Update" icon="ui-icon-arrowrefresh-1-w"/>
                        <p:menuitem value="Delete" icon="ui-icon-close"/>
                        <p:separator />
                        <p:menuitem value="Homepage" url="http://www.primefaces.org" icon="ui-icon-extlink"/>
                    </p:menuButton>
                </p:toolbarGroup>
            </p:toolbar>

            <p:sticky target="tb" />
            <div style="margin-top: 7px;"> 
                <div class="ui-fluid">
                    <p:panelGrid columns="6" layout="grid"                                   
                                 styleClass="panelgrid-noborder"
                                 columnClasses="ui-grid-col-2, ui-grid-col-2, ui-grid-col-2, ui-grid-col-2,ui-grid-col-2,ui-grid-col-2">

                        <!--                    1 linha-->
                        <p:outputLabel value="Tipo Data" for="tpData" />
                        <p:selectOneMenu id="tpData">
                            <f:selectItem itemLabel="Selecione" />
                            <f:selectItem itemLabel="A vista" itemValue="A vista" />
                            <f:selectItem itemLabel="30 dias" itemValue="30 dias" />
                            <f:selectItem itemLabel="30 + 60 dias" itemValue="30 + 60 dias" />
                        </p:selectOneMenu>

                        <p:outputLabel value="Data inicio" for="dtInicio" />
                        <p:calendar id="dtInicio"/>

                        <p:outputLabel value="Data fim" for="dtFim" />
                        <p:calendar id="dtFim"/>

                        <!--                    2 linha-->
                        <p:outputLabel value="Situação do Tópico" for="sitTopico" />
                        <p:selectOneRadio id="sitTopico" >
                            <f:selectItem itemLabel="Xbox" itemValue="Xbox" />
                            <f:selectItem itemLabel="PS4" itemValue="PS4" />
                            <f:selectItem itemLabel="Wii U" itemValue="Wii U" />
                        </p:selectOneRadio>

                        <p:outputLabel value="C.Agenda" for="cAgenda" />
                        <p:inputText id="cAgenda" value="" />

                        <p:outputLabel value="Nome da empresa" for="nomeEmpresa" />
                        <p:inputText id="nomeEmpresa" value="" />

                        <!--                    3 linha-->
                        <p:outputLabel value="Fez a Anotação" for="fezAnotacao" />
                        <p:selectOneMenu id="fezAnotacao">
                            <f:selectItem itemLabel="Selecione" />
                            <f:selectItem itemLabel="A vista" itemValue="A vista" />
                            <f:selectItem itemLabel="30 dias" itemValue="30 dias" />
                            <f:selectItem itemLabel="30 + 60 dias" itemValue="30 + 60 dias" />
                        </p:selectOneMenu>

                        <p:outputLabel value="Resp Retorno" for="rspRetorno" />
                        <p:selectOneMenu id="rspRetorno">
                            <f:selectItem itemLabel="Selecione" />
                            <f:selectItem itemLabel="A vista" itemValue="A vista" />
                            <f:selectItem itemLabel="30 dias" itemValue="30 dias" />
                            <f:selectItem itemLabel="30 + 60 dias" itemValue="30 + 60 dias" />
                        </p:selectOneMenu>

                        <p:outputLabel value="Fez Abertura Tópico" for="fezAbertTopico" />
                        <p:selectOneMenu id="fezAbertTopico">
                            <f:selectItem itemLabel="Selecione" />
                            <f:selectItem itemLabel="A vista" itemValue="A vista" />
                            <f:selectItem itemLabel="30 dias" itemValue="30 dias" />
                            <f:selectItem itemLabel="30 + 60 dias" itemValue="30 + 60 dias" />
                        </p:selectOneMenu>

                        <!--                4 linha-->
                        <p:outputLabel value="Acompanhamento do Tópico" for="acompTopico" />
                        <p:selectOneMenu id="acompTopico">
                            <f:selectItem itemLabel="Selecione" />
                            <f:selectItem itemLabel="A vista" itemValue="A vista" />
                            <f:selectItem itemLabel="30 dias" itemValue="30 dias" />
                            <f:selectItem itemLabel="30 + 60 dias" itemValue="30 + 60 dias" />
                        </p:selectOneMenu>

                        <p:outputLabel value="Ramo Atividade" for="ramoAtividade" />
                        <p:selectOneMenu id="ramoAtividade">
                            <f:selectItem itemLabel="Selecione" />
                            <f:selectItem itemLabel="A vista" itemValue="A vista" />
                            <f:selectItem itemLabel="30 dias" itemValue="30 dias" />
                            <f:selectItem itemLabel="30 + 60 dias" itemValue="30 + 60 dias" />
                        </p:selectOneMenu>

                        <p:outputLabel value="Software Atual" for="softAtual" />
                        <p:selectOneMenu id="softAtual">
                            <f:selectItem itemLabel="Selecione" />
                            <f:selectItem itemLabel="A vista" itemValue="A vista" />
                            <f:selectItem itemLabel="30 dias" itemValue="30 dias" />
                            <f:selectItem itemLabel="30 + 60 dias" itemValue="30 + 60 dias" />
                        </p:selectOneMenu>

                        <!--                    5 linha-->
                        <p:outputLabel value="Cidade" for="cidadeId" />
                        <p:selectOneMenu id="cidadeId">
                            <f:selectItem itemLabel="Selecione" />
                            <f:selectItem itemLabel="A vista" itemValue="A vista" />
                            <f:selectItem itemLabel="30 dias" itemValue="30 dias" />
                            <f:selectItem itemLabel="30 + 60 dias" itemValue="30 + 60 dias" />
                        </p:selectOneMenu>

                        <p:outputLabel  />
                        <p:outputLabel />

                        <p:outputLabel  />
                        <p:outputLabel />

                        <p:outputLabel value="Potencial" for="portencial" />
                        <p:selectOneRadio id="portencial">
                            <f:selectItem itemLabel="Xbox" itemValue="Xbox" />
                            <f:selectItem itemLabel="PS4" itemValue="PS4" />
                            <f:selectItem itemLabel="Wii U" itemValue="Wii U" />
                        </p:selectOneRadio>

                        <p:outputLabel value="Retorno" for="retorno" />
                        <p:selectOneRadio id="retorno" >
                            <f:selectItem itemLabel="Xbox" itemValue="Xbox" />
                            <f:selectItem itemLabel="PS4" itemValue="PS4" />
                            <f:selectItem itemLabel="Wii U" itemValue="Wii U" />
                        </p:selectOneRadio>

                        <!--                    6 linha-->
                        <p:outputLabel value="Tipo de Cadastros" for="tpCadastro" />
                        <p:selectOneRadio id="tpCadastro" >
                            <f:selectItem itemLabel="Xbox" itemValue="Xbox" />
                            <f:selectItem itemLabel="PS4" itemValue="PS4" />
                            <f:selectItem itemLabel="Wii U" itemValue="Wii U" />
                        </p:selectOneRadio>
                    </p:panelGrid>

                    <div class="ui-grid ui-grid-responsive">
                        <br/>
                        <div class="ui-grid-row">
                            <div class="ui-grid-col-10"></div>
                            <div class="ui-grid-col-1">
                                <p:button value="Pesquisar" icon="fa fa-fw fa-search"/>
                            </div>
                            <span style="margin-right: 10px"></span>
                            <div class="ui-grid-col-1" style="margin-right: 10px;">
                                <p:commandButton value="Limpar"  type="reset"  icon="fa fa-fw fa-eraser"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <p:dataTable style="margin-top:15px" selectionMode="single" reflow="true">
                <p:column headerText="Nome">
                    <h:outputText value="Lemoel" />
                </p:column>
                <p:column headerText="Telefone">
                    <h:outputText value="66-96969924"/>
                </p:column>
                <p:column headerText="Cpf">
                    <h:outputText value="84593890144"/>
                </p:column>  
                <f:facet name="footer">
                    <p:commandButton icon="ui-icon-pencil" value="Editar"/>
                </f:facet>
            </p:dataTable>
            
        </h:form>
        <h:form>
            <p:dialog widgetVar="itemDialog" header="Novo item" modal="true"
                      resizable="false" style="min-width: 300px" responsive="true">

                <h:panelGroup id="itemPanel" layout="block" styleClass="ui-fluid">
                    <p:messages id="msgDialog" autoUpdate="false" />

                    <p:panelGrid columns="4" layout="grid" styleClass="panelgrid-noborder"
                                 columnClasses="ui-grid-col-3, ui-grid-col-3,ui-grid-col-3,ui-grid-col-3">

                        <p:outputLabel value="Descrição" for="descricao" />
                        <p:inputText id="descricao"  />

                        <p:outputLabel value="Tipo" for="tipo" />
                        <p:selectOneMenu id="tipo" >
                            <f:selectItem itemLabel="Selecione" />
                            <f:selectItem itemLabel="Produto" itemValue="PRODUTO" />
                            <f:selectItem itemLabel="Serviço" itemValue="SERVICO" />
                        </p:selectOneMenu>

                        <p:outputLabel value="Preço" for="preco" />
                        <p:inputText id="preco" >
                            <f:convertNumber />
                        </p:inputText>

                        <p:outputLabel/>						

                        <p:outputLabel value="Descrição" for="descricao1" />
                        <p:inputText id="descricao1"  />

                        <p:outputLabel value="Tipo" for="tipo1" />
                        <p:selectOneMenu id="tipo1" >
                            <f:selectItem itemLabel="Selecione" />
                            <f:selectItem itemLabel="Produto" itemValue="PRODUTO" />
                            <f:selectItem itemLabel="Serviço" itemValue="SERVICO" />
                        </p:selectOneMenu>

                        <p:outputLabel value="Preço" for="preco1" />
                        <p:inputText id="preco1" >
                            <f:convertNumber />
                        </p:inputText>

                        <p:outputLabel/>

                        <p:outputLabel value="Descrição" for="descricao2" />
                        <p:inputText id="descricao2"  />

                        <p:outputLabel value="Tipo" for="tipo2" />
                        <p:selectOneMenu id="tipo2" >
                            <f:selectItem itemLabel="Selecione" />
                            <f:selectItem itemLabel="Produto" itemValue="PRODUTO" />
                            <f:selectItem itemLabel="Serviço" itemValue="SERVICO" />
                        </p:selectOneMenu>

                        <p:outputLabel value="Preço" for="preco2" />
                        <p:inputText id="preco2" >
                            <f:convertNumber />
                        </p:inputText>

                        <p:outputLabel/>

                    </p:panelGrid>

                </h:panelGroup>

            </p:dialog>
        </h:form>

    </ui:define>
</ui:composition>